{
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es6",    
        "lib": [ "es2015", "es2017", "dom" ],
        "module": "esnext",
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
      },
      "exclude": [
        "node_modules"
      ],
      "include": [
        "content/src"
      ]
}